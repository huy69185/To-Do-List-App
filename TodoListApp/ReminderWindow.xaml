<Window x:Class="TodoListApp.ReminderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reminder" Height="200" Width="400"
        WindowStyle="None" ResizeMode="NoResize" Topmost="True"
        WindowStartupLocation="CenterScreen" Background="LightYellow">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="PopupTextBlock" Text="Reminder!" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="10"/>
            <Button Content="Stop" Width="100" Margin="10" Click="StopReminderButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
