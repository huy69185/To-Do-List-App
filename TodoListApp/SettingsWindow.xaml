<Window x:Class="TodoListApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="193" Width="400" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" Icon="pack://application:,,,/app_icon.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock Text="Settings" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>
            <CheckBox x:Name="DarkModeCheckBox" Content="Dark Mode" Margin="10" Checked="DarkModeCheckBox_Checked" Unchecked="DarkModeCheckBox_Unchecked"/>
            <CheckBox x:Name="EnableNotificationsCheckBox" Content="Enable Notifications" Margin="10" Checked="EnableNotificationsCheckBox_Checked" Unchecked="EnableNotificationsCheckBox_Unchecked"/>
        </StackPanel>
    </Grid>
</Window>
