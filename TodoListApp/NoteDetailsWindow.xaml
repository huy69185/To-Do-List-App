<Window x:Class="TodoListApp.NoteDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Note Details" Height="400" Width="400" Loaded="Window_Loaded" Icon="pack://application:,,,/app_icon.ico" WindowStartupLocation="CenterScreen">
    <Grid x:Name="NoteDetailsGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="NoteTitleTextBox" Margin="10" VerticalAlignment="Top"/>
        <TextBox x:Name="NoteDetailTextBox" Margin="10,0,10,0" VerticalAlignment="Top" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Height="108" Grid.Row="1"/>
        <ListBox x:Name="ReminderListBox" Margin="10,123,10,0" VerticalAlignment="Top" Grid.Row="1" Height="130"/>
        <Button Content="Save Changes" Width="100" Height="39" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="277,0,0,10" Click="SaveChangesButton_Click" Grid.Row="1"/>
    </Grid>
</Window>
